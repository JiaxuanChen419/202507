import numpy as np
import matplotlib.pyplot as plt
from pyswmm import Simulation, Nodes, Subcatchments, LidGroups, LidUnit
from pymoo.algorithms.moo.nsga2 import NSGA2
from pymoo.core.problem import ElementwiseProblem
from pymoo.optimize import minimize
from pymoo.visualization.scatter import Scatter

class MyProblem(ElementwiseProblem):
    def __init__(self):
        super().__init__(n_var=26,n_obj=3,n_ieq_constr=1,xl=0.0,xu=[2534.2,2051.5,2060.6,1134.9,1364.9,1267.8,2638.6,722.6,1196.0,605.4,719.4,705.7,2050.0,5450.1,2804.9,2812.5,2944.3,5074.0,2919.0,3266.9,1040.4,2157.5,4415.0,3024.8,610.7,905.6])

    def _evaluate(self, x, out, *args, **kwargs):
        with Simulation(r'D:\Pycharm\PythonProject1\S8.inp') as sim:
            LidGroups(sim)['S12'][0].unit_area=x[0]
            LidGroups(sim)['S23'][0].unit_area=x[1]
            LidGroups(sim)['S34'][0].unit_area=x[2]
            LidGroups(sim)['S35'][0].unit_area=x[3]
            LidGroups(sim)['S36'][0].unit_area=x[4]
            LidGroups(sim)['S37'][0].unit_area=x[5]
            LidGroups(sim)['S45'][0].unit_area=x[6]
            LidGroups(sim)['S47'][0].unit_area=x[7]
            LidGroups(sim)['S49'][0].unit_area=x[8]
            LidGroups(sim)['S50'][0].unit_area=x[9]
            LidGroups(sim)['S52'][0].unit_area=x[10]
            LidGroups(sim)['S58'][0].unit_area=x[11]
            LidGroups(sim)['S67'][0].unit_area=x[12]
            LidGroups(sim)['S68'][0].unit_area=x[13]
            LidGroups(sim)['S71'][0].unit_area=x[14]
            LidGroups(sim)['S98'][0].unit_area=x[15]
            LidGroups(sim)['S124'][0].unit_area=x[16]
            LidGroups(sim)['S157'][0].unit_area=x[17]
            LidGroups(sim)['S159'][0].unit_area=x[18]
            LidGroups(sim)['S160'][0].unit_area=x[19]
            LidGroups(sim)['S163'][0].unit_area=x[20]
            LidGroups(sim)['S164'][0].unit_area=x[21]
            LidGroups(sim)['S171'][0].unit_area=x[22]
            LidGroups(sim)['S174'][0].unit_area=x[23]
            LidGroups(sim)['S175'][0].unit_area=x[24]
            LidGroups(sim)['S183'][0].unit_area=x[25]

            for step in sim:
                pass

            lid_area=np.array(np.zeros(26))
            lid_area[0] = LidGroups(sim)['S12'][0].unit_area
            lid_area[1] = LidGroups(sim)['S23'][0].unit_area
            lid_area[2] = LidGroups(sim)['S34'][0].unit_area
            lid_area[3] = LidGroups(sim)['S35'][0].unit_area
            lid_area[4] = LidGroups(sim)['S36'][0].unit_area
            lid_area[5] = LidGroups(sim)['S37'][0].unit_area
            lid_area[6] = LidGroups(sim)['S45'][0].unit_area
            lid_area[7] = LidGroups(sim)['S47'][0].unit_area
            lid_area[8] = LidGroups(sim)['S49'][0].unit_area
            lid_area[9] = LidGroups(sim)['S50'][0].unit_area
            lid_area[10] = LidGroups(sim)['S52'][0].unit_area
            lid_area[11] = LidGroups(sim)['S58'][0].unit_area
            lid_area[12] = LidGroups(sim)['S67'][0].unit_area
            lid_area[13] = LidGroups(sim)['S68'][0].unit_area
            lid_area[14] = LidGroups(sim)['S71'][0].unit_area
            lid_area[15] = LidGroups(sim)['S98'][0].unit_area
            lid_area[16] = LidGroups(sim)['S124'][0].unit_area
            lid_area[17] = LidGroups(sim)['S157'][0].unit_area
            lid_area[18] = LidGroups(sim)['S159'][0].unit_area
            lid_area[19] = LidGroups(sim)['S160'][0].unit_area
            lid_area[20] = LidGroups(sim)['S163'][0].unit_area
            lid_area[21] = LidGroups(sim)['S164'][0].unit_area
            lid_area[22] = LidGroups(sim)['S171'][0].unit_area
            lid_area[23] = LidGroups(sim)['S174'][0].unit_area
            lid_area[24] = LidGroups(sim)['S175'][0].unit_area
            lid_area[25] = LidGroups(sim)['S183'][0].unit_area

            bluearea=lid_area[0]+lid_area[1]+lid_area[2]+lid_area[3]+lid_area[4]+lid_area[5]+lid_area[6]+lid_area[7]\
                    +lid_area[8]+lid_area[9]+lid_area[10]+lid_area[11]+lid_area[12]+lid_area[13]+lid_area[14]+lid_area[15]\
                    +lid_area[16]+lid_area[17]+lid_area[18]+lid_area[19]+lid_area[20]+lid_area[21]+lid_area[22]+lid_area[23]\
                    +lid_area[24]+lid_area[25]

            subcatchment_runoff=np.array(np.zeros(192))
            for i in range(192):
                subcatchment_runoff[i]=Subcatchments(sim)['S'+str(i+1)].statistics['runoff']/Subcatchments(sim)['S'+str(i+1)].area/10
            R=0
            for i in range(192):
                R=R+subcatchment_runoff[i]

            node_surcharged_duration=np.array(np.zeros(192))
            for i in range(1,193):
                node_surcharged_duration[i-1]=Nodes(sim)[str(i)].statistics['surcharge_duration']
            T=np.sum(node_surcharged_duration)

            Storage_blue=1.264*bluearea
            Total_storage=Storage_blue

            f1=300*bluearea
            f2=R
            f3=T

            g1=Total_storage-100000

            out["F"] = [f1, f2, f3]
            out["G"] = [g1]
            sim.close()

problem=MyProblem()
algorithm=NSGA2(pop_size=100)
res=minimize(problem,algorithm,("n_gen",500),verbose=True,seed=1)
print(res.exec_time)
np.savetxt(r'C:\Users\Alienware\Desktop\design.txt', res.X)
np.savetxt(r'C:\Users\Alienware\Desktop\objective.txt', res.F)  
np.savetxt(r'C:\Users\Alienware\Desktop\constraint.txt', res.G)  
